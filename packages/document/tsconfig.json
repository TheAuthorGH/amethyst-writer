{
  "files": [
    "./src/index.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDirs": [ "./src", "./tests" ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "es2019",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": [ "./src/*" ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./tests",
    "./dist"
  ]
}
